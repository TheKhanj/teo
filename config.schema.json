{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "record": {
      "type": "object",
      "properties": {
        "dir": {
          "type": "string",
          "format": "path"
        }
      },
      "required": [
        "dir"
      ]
    },
    "cameras": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "format": "uri"
          }
        },
        "required": [
          "url"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "cameras",
    "record"
  ],
  "additionalProperties": true
}
