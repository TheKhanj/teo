{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "user": {
      "type": "string",
      "default": "root"
    },
    "teod": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "port": {
          "type": "number",
          "default": 8080
        },
        "address": {
          "type": "string",
          "default": "0.0.0.0"
        }
      }
    },
    "group": {
      "type": "string",
      "default": "root"
    },
    "record": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "dir"
      ],
      "properties": {
        "dir": {
          "type": "string",
          "format": "path"
        }
      }
    },
    "cameras": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "primary": {
            "type": "string",
            "format": "uri"
          },
          "secondary": {
            "type": "string",
            "format": "uri"
          }
        },
        "required": [
          "primary"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "cameras",
    "record"
  ],
  "additionalProperties": true
}
