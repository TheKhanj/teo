{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "cameras",
    "record"
  ],
  "additionalProperties": true,
  "properties": {
    "user": {
      "type": "string",
      "default": "root"
    },
    "users": {
      "type": "object",
      "default": {},
      "additionalProperties": {
        "type": "object",
        "required": [
          "password"
        ],
        "properties": {
          "password": {
            "type": "string",
            "description": "sha256 hash of the password of the user"
          }
        }
      }
    },
    "web": {
      "default": false,
      "oneOf": [
        {
          "type": "boolean",
          "enum": [
            false
          ]
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "port": {
              "type": "integer",
              "default": 8080
            }
          }
        }
      ]
    },
    "api": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "port": {
          "type": "number",
          "default": 8081
        },
        "address": {
          "type": "string",
          "default": "0.0.0.0"
        }
      }
    },
    "group": {
      "type": "string",
      "default": "root"
    },
    "record": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "dir"
      ],
      "properties": {
        "dir": {
          "type": "string",
          "format": "path"
        }
      }
    },
    "cameras": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "primary": {
            "type": "string",
            "format": "uri"
          },
          "secondary": {
            "type": "string",
            "format": "uri"
          }
        },
        "required": [
          "primary"
        ],
        "additionalProperties": false
      }
    }
  }
}
