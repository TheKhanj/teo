{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "cameras",
    "record"
  ],
  "additionalProperties": true,
  "properties": {
    "users": {
      "type": "object",
      "default": {},
      "additionalProperties": {
        "type": "object",
        "required": [
          "password"
        ],
        "properties": {
          "password": {
            "type": "string",
            "description": "SHA256 hash of the password of the user."
          }
        }
      }
    },
    "web": {
      "default": false,
      "oneOf": [
        {
          "type": "boolean",
          "enum": [
            false
          ]
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": [],
          "properties": {
            "user": {
              "type": "string",
              "default": "root",
              "description": "User which is used to run the web service."
            },
            "group": {
              "type": "string",
              "default": "root",
              "description": "Group which is used to run the web service."
            },
            "port": {
              "type": "integer",
              "default": 8080
            }
          }
        }
      ]
    },
    "api": {
      "default": false,
      "oneOf": [
        {
          "type": "boolean",
          "enum": [
            false
          ]
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "user": {
              "type": "string",
              "default": "root",
              "description": "User which is used to run the api service."
            },
            "group": {
              "type": "string",
              "default": "root",
              "description": "Group which is used to run the api service."
            },
            "port": {
              "type": "number",
              "default": 8081
            },
            "address": {
              "type": "string",
              "default": "0.0.0.0"
            }
          }
        }
      ]
    },
    "record": {
      "default": false,
      "oneOf": [
        {
          "type": "boolean",
          "enum": [
            false
          ]
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "dir"
          ],
          "properties": {
            "user": {
              "type": "string",
              "default": "root",
              "description": "User which is used to run the recording services."
            },
            "group": {
              "type": "string",
              "default": "root",
              "description": "Group which is used to run the recording services."
            },
            "dir": {
              "type": "string",
              "format": "path",
              "description": "Directory at which recordings will be saved."
            }
          }
        }
      ]
    },
    "cameras": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "primary": {
            "type": "string",
            "format": "uri"
          },
          "secondary": {
            "type": "string",
            "format": "uri"
          }
        },
        "required": [
          "primary",
          "secondary"
        ],
        "additionalProperties": false
      }
    }
  }
}
