{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "users": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#definitions/user"
      }
    },
    "roles": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {
          "$ref": "#/definitions/operation"
        }
      }
    },
    "cameras": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#definitions/camera"
      }
    }
  },
  "required": [
    "cameras",
    "roles",
    "users"
  ],
  "definitions": {
    "camera-stream:http-proxy": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "http-proxy"
          ]
        },
        "routes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "match": {
                "type": "string"
              },
              "backend": {
                "type": "string"
              }
            },
            "required": [
              "match",
              "backend"
            ]
          }
        }
      },
      "required": [
        "type",
        "routes"
      ]
    },
    "camera-stream:pipe": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "pipe"
          ]
        },
        "content-type": {
          "type": "string"
        },
        "command": {
          "type": "string",
          "examples": []
        }
      },
      "required": [
        "type",
        "content-type",
        "command"
      ]
    },
    "camera": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "description": "CGI handler of the camera",
        "properties": {
          "command": {
            "type": "string",
            "examples": [
              "teo cgi -H \"Content-Type: video/mp4\" -- ffmpeg -i rtsp://... -f mp4 -movflags frag_keyframe+empty_moov -"
            ]
          },
          "cwd": {
            "type": "string",
            "description": "CGI's executable's working directory"
          },
          "env": {
            "type": "array",
            "items": {
              "type": "string",
              "description": "Environment variables to set",
              "examples": [
                "KEY=VALUE"
              ]
            }
          },
          "inherit-env": {
            "type": "array",
            "items": {
              "type": "string",
              "description": "Environment variables to inherit from host",
              "examples": [
                "KEY"
              ]
            }
          }
        }
      },
      "required": [
        "command"
      ]
    },
    "operation": {
      "anyOf": [
        {
          "type": "string",
          "pattern": "^view:.*",
          "description": "The definition of the operation consisting of action and resource in the following format:\n\n{action}:{resource}",
          "examples": [
            "view:/cameras/cam1/live",
            "view:/cameras/cam1/recordings",
            "view:/cameras/cam1/exports"
          ]
        },
        {
          "type": "string",
          "pattern": "^!.*",
          "description": "A reference to an already defined role",
          "examples": [
            "!a-role-name"
          ]
        }
      ]
    },
    "user": {
      "type": "object",
      "properties": {
        "password": {
          "type": "string"
        },
        "roles": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "password",
        "roles"
      ]
    }
  }
}
